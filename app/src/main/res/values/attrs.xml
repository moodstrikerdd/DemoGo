<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CommTopBar">
        //沉浸式
        <attr name="needPadding" format="boolean" />

        <attr name="topBackground" format="reference|color" />

        <attr name="ivLeftSrc" format="reference" />

        <attr name="tvLeftText" format="string" />
        <attr name="tvLeftTextColor" format="color" />
        <attr name="tvLeftTextSize" format="dimension" />

        <attr name="tvTitleText" format="string" />
        <attr name="tvTitleTextColor" format="color" />
        <attr name="tvTitleTextSize" format="dimension" />

        <attr name="tvRightText" format="string" />
        <attr name="tvRightTextColor" format="color" />
        <attr name="tvRightTextSize" format="dimension" />

        <attr name="ivRightSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="CommTextView">
        <attr name="ctvTitleText" format="string" />
        <attr name="ctvTitleTextSize" format="dimension" />
        <attr name="ctvTitleTextColor" format="color" />

        <attr name="ctvRightGravity" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="ctvRightSrc" format="reference" />

        <attr name="ctvRightHint" format="string" />
        <attr name="ctvRightHintColor" format="color" />

        <attr name="ctvRightText" format="string" />
        <attr name="ctvRightTextSize" format="dimension" />
        <attr name="ctvRightTextColor" format="color" />
    </declare-styleable>

</resources>